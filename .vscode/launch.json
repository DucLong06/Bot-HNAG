{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "justMyCode": false
        },
        {
            "name": "Django command",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "close_poll"
            ],
            "django": true,
            "autoStartBrowser": false,
            "justMyCode": false
        },
        {
            "name": "Celery",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--app",
                "cognisearch",
                "worker",
                "--loglevel",
                "DEBUG",
                "--pool",
                "solo",
            ]
        },
    ],
    "compounds": [
        {
            "name": "Celery and Django",
            "configurations": [
                "Celery",
                "Django"
            ]
        },
        {
            "name": "Celery and Django command",
            "configurations": [
                "Celery",
                "Django command"
            ]
        }
    ]
}